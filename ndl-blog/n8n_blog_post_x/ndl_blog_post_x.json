    {
      "parameters": {
        "jsCode": "const moisFRtoEN = {\n  \"janvier\": \"Jan\", \"f√©vrier\": \"Feb\", \"mars\": \"Mar\",\n  \"avril\": \"Apr\", \"mai\": \"May\", \"juin\": \"Jun\",\n  \"juillet\": \"Jul\", \"ao√ªt\": \"Aug\", \"septembre\": \"Sep\",\n  \"octobre\": \"Oct\", \"novembre\": \"Nov\", \"d√©cembre\": \"Dec\",\n  \"jan\": \"Jan\", \"f√©v\": \"Feb\", \"mar\": \"Mar\",\n  \"avr\": \"Apr\", \"mai\": \"May\", \"jun\": \"Jun\",\n  \"jui\": \"Jul\", \"ao√ª\": \"Aug\", \"sep\": \"Sep\",\n  \"oct\": \"Oct\", \"nov\": \"Nov\", \"d√©c\": \"Dec\"\n};\n\nreturn items.map(item => {\n  let dateStr = item.json.pubDate;\n\n  // üîÅ Remplace les mois fran√ßais par anglais\n  Object.entries(moisFRtoEN).forEach(([fr, en]) => {\n    const regex = new RegExp(fr, 'i');\n    dateStr = dateStr.replace(regex, en);\n  });\n\n  const parsedDate = new Date(dateStr);\n  \n  if (isNaN(parsedDate.getTime())) {\n    item.json.formattedPubDate = 'Invalid date';\n  } else {\n    const pad = (n) => n.toString().padStart(2, '0');\n    const formatted = `${parsedDate.getFullYear()}-${pad(parsedDate.getMonth()+1)}-${pad(parsedDate.getDate())} ${pad(parsedDate.getHours())}:${pad(parsedDate.getMinutes())}:${pad(parsedDate.getSeconds())}`;\n    item.json.formattedPubDate = formatted;\n  }\n\n  return item;\n});"
      },
